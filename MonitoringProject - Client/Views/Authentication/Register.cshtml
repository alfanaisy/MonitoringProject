@{
    Layout = "Layout";
}

<div class="register-box">
    <div class="register-logo">
        <b>Monitoring</b>Project
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new account</p>

            <form id="RegisterMemberForm">
                <div class="input-group mb-3">
                    <input id="name" name="name" type="text" class="form-control" placeholder="Full name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input id="email" name="email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input id="password" name="password" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <label>Register As : </label>
                <fieldset class="input-group mb-3">
                    <div id="radioRole">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="member" value="Member">
                            <label class="form-check-label" for="member">
                                Member
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="manager" value="Manager">
                            <label class="form-check-label" for="manager">
                                Manager
                            </label>
                        </div>
                    </div>
                </fieldset>
                <div class="row">
                    <div class="col-8">
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>



            <a asp-controller="Authentication" asp-action="Index" class="text-center">I already have an account</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->


@section customScripts{

    <script>

        $(document).ready(function () {
            $('#RegisterMemberForm').submit(function (e) {
                e.preventDefault();

                let role = $("input[type='radio'][name='role']:checked").val()

                if (role === "Member") {
                    register();
                } else {
                    registerManager();
                }
                
            })
        })

        const registerManager = () => {
            let User = {
                name: $("#name").val(),
                email: $("#email").val(),
                password: $("#password").val()
            };

            $.ajax({
                type: "POST",
                url: "RegisterProjectManagerAPI",
                data: User,
                beforeSend: () => {
                    Swal.fire({
                        title: 'Please wait...',
                        showConfirmButton: false,
                        backdrop: `rgba(0,0,0,0.6)`
                    })
                },
                success: (data) => {
                    console.log(data)
                    //alert(data)
                    Swal.fire({
                        text: 'Register as manager successful',
                        icon: 'success',
                        timer: 10000
                    }).then(() => {
                        window.location.href = data;
                    })
                },
                error: (data) => {
                    console.log(data)
                    //alert(data)
                }
            });
        }

        const register = () => {
            let User = {
                name: $("#name").val(),
                email: $("#email").val(),
                password: $("#password").val()
            };

            $.ajax({
                type: "POST",
                url: "RegisterMemberAPI",
                data: User,
                beforeSend: () => {
                    Swal.fire({
                        title: 'Please wait...',
                        showConfirmButton: false,
                        backdrop: `rgba(0,0,0,0.6)`
                    })
                },
                success: (data) => {
                    console.log(data)
                    //alert(data)
                    Swal.fire({
                        text: 'Register as member successful',
                        icon: 'success',
                        timer: 10000
                    }).then(() => {
                        window.location.href = data;
                    })
                    
                },
                error: (data) => {
                    console.log(data)
                    //alert(data)
                }
            });
        }

    </script>

}
