@{
    Layout = "Layout";
}

<div class="login-box">
    <div class="login-logo">
        <b>Admin</b>LTE
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

            <form id="ForgotPassword">
                <div class="input-group mb-3">
                    <input id="email" name="email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="button" id="btnForgot" class="btn btn-primary btn-block">Request new password</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <p class="mt-3 mb-1">
                <a asp-controller="Authentication" asp-action="Index">Login</a>
            </p>
            <p class="mb-0">
                <a asp-controller="Authentication" asp-action="Register" class="text-center">Register a new account</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>

@section scripts{
    
    <script>

        $(document).ready(function () {
            $('#btnForgot').click(function () {
                var User = new Object()
                User.email = $("#email").val();
                //let email = $("#email").val();
                console.log(User)
                $.ajax({
                    type: "POST",
                    url: "https://localhost:44380/api/Accounts/forgot-password",
                    data: User,
                    contentType: "application/json",

                    success: (data) => {
                        console.log(data)
                    },
                    error: (data) => {
                        console.log(data)
                    }
                })
            })
        })

        const forgot = () => {

        }

    </script>

}
