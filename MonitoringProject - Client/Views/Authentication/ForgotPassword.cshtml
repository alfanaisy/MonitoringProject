@{
    Layout = "Layout";
}

<div class="login-box">
    <div class="login-logo">
        <b>Admin</b>LTE
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

            <form id="ForgotPasswordForm" action="#">
                <div class="input-group mb-3">
                    <input id="email" name="email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" id="btnForgot" class="btn btn-primary btn-block">Request new password</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <p class="mt-3 mb-1">
                <a asp-controller="Authentication" asp-action="Index">Login</a>
            </p>
            <p class="mb-0">
                <a asp-controller="Authentication" asp-action="Register" class="text-center">Register a new account</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>

@section customScripts{
    
    <script>

        $(document).ready(function () {
            $('#ForgotPasswordForm').submit(function (e) {
                e.preventDefault();
                forgot();
            })
        })

        const forgot = () => {
            //let user = {
            //    Email: $('#email').val()
            //};

            //let response = fetch("ForgotPasswordAPI", {
            //    method: 'POST',
            //    headers: {
            //        'Content-Type': 'application/json;charset=utf-8'
            //    },
            //    body: user
            //});

            //let result = response.json();
            //return result;

            let User = {
                email : $("#email").val()
            };

            $.ajax({
                type: "POST",
                url: "ForgotPasswordAPI",
                data: User,
                cache: false,
                beforeSend: () => {
                    Swal.fire({
                        title: 'Please wait...',
                        showConfirmButton: false,
                        backdrop: `rgba(0,0,0,0.6)`

                    })
                },
                success: (data) => {
                    console.log(data)
                    //alert(data)
                    Swal.fire({
                        text: 'Email has been sent to your address',
                        icon: 'success',
                        timer: 10000,
                        timerProgressBar: true
                    });
                },
                error: (data) => {
                    console.log(data)
                    //alert(data)
                    Swal.fire({
                        text: 'the email you send is not valid',
                        icon: 'error',
                        timer: 5000,
                        timerProgressBar: true
                    });
                }
            });
        }

    </script>

}
